set -x
set -e

export LC_ALL=C

source /common.sh
install_cleanup_trap

nmcli con add type wifi ifname wlan0 mode ap con-name wifi-hotspot ssid OctoPi-WiFi autoconnect true
nmcli con modify wifi-hotspot connection.autoconnect-priority -999
nmcli con modify wifi-hotspot wifi.band bg
nmcli con modify wifi-hotspot wifi.channel 1
nmcli con modify wifi-hotspot ipv4.method shared ipv4.address 10.0.0.1/24
nmcli con modify wifi-hotspot ipv6.method disabled
